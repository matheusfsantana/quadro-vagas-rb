<div class="flex flex-col gap-8">
  <h1> Realizar Carga Massiva </h1>
  <%= form_with url: massive_loads_path, method: :post, class: "flex flex-col gap-4", multipart: true, data: { turbo: false } do |f| %>
    <%= f.label "Insira o arquivo .txt ou .csv para realizar a carga" %>
    <%= f.file_field 'arquivo', accept: ".csv, .txt", class: "peer relative w-full border-b border-slate-200 py-4 text-slate-500 placeholder-transparent outline-none transition-all autofill:bg-white focus:border-emerald-500 focus:outline-none invalid:focus:border-pink-500 focus-visible:outline-none disabled:cursor-not-allowed disabled:bg-slate-50 disabled:text-slate-400 [&::file-selector-button]:hidden" %>
    <%= f.submit "Enviar" %>
  <% end %>
</div>

<% if @file %>
  <div class="flex flex-col gap-8">
    Sucesso: <%= @file.success %>
    <br>
    Erros:
    <div class="flex flex-col gap-8">
     <% @file.errors.each do |error| %>
      <span> <%= error %> </span>
     <% end %>
    </div>
  </div>
<% end %>
