<div class="flex flex-col gap-8">
  <h1> Realizar Carga Massiva </h1>
  <%= form_with model: @massive_load_input, method: :post, class: "flex flex-col gap-4", multipart: true, data: { turbo: false } do |f| %>
    <%= f.label :file, "Insira o arquivo .txt ou .csv para realizar a carga" %>
    <%= f.file_field :file, accept: ".csv, .txt", class: "peer relative w-full border-b border-slate-200 py-4 text-slate-500 placeholder-transparent outline-none transition-all autofill:bg-white focus:border-emerald-500 focus:outline-none invalid:focus:border-pink-500 focus-visible:outline-none disabled:cursor-not-allowed disabled:bg-slate-50 disabled:text-slate-400 [&::file-selector-button]:hidden" %>
    <%= f.submit "Enviar" %>
  <% end %>
</div>


